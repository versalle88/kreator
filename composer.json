{
    "name": "versalle/kreator",
    "description": "A simple, PSR-compliant PHP ADR micro-framework",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Andrew Versalle",
            "email": "andrew.versalle@gmail.com"
        }
    ],
    "require": {
        "php": "7.2.* || 7.3.* || 7.4.* || 8.0.* || 8.1.*",
        "ext-mbstring": "*",
        "guzzlehttp/psr7": "^2.1",
        "nikic/fast-route": "^1.3",
        "psr/container": "1.1.1",
        "psr/http-message": "1.0",
        "psr/http-server-handler": "1.0.1",
        "tracy/tracy": "^2.9",
        "twig/twig": "^3.3",
        "versalle/container": "2.0.0"
    },
    "require-dev": {
        "phpspec/phpspec": "6.3.1"
    },
    "provide": {
        "psr/container-implementation": "1.1.1"
    },
    "autoload": {
        "psr-4": {
            "Versalle\\Framework\\": "src/",
            "App\\": "app/modules/"
        }
    },
    "autoload-dev": {
        "files": [
            "tests/functions.php"
        ]
    },
    "config": {
        "platform": {
            "php": "7.2.34"
        },
        "sort-packages": true
    },
    "scripts": {
        "test": [
            "phpspec run"
        ]
    }
}
